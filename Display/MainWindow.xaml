<Window x:Class="Display.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Display"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Grid.Row="1" Margin="0,100,0,0" Height="75" Background="LightGreen" Click="CreateMap" Content="Generate Map"/>
        <Button Grid.Column="1" Grid.Row="1" Margin="0,0,0,100" Height="75" Background="LightBlue" Click="BeginSim">
            Begin Simulation
        </Button>
        <StackPanel Grid.RowSpan="2" Grid.Row="0" Grid.Column="0">
            <Ellipse Fill="Yellow" Height="100" Width="100%" StrokeThickness="2" Stroke="Black"/>
        </StackPanel>
    </Grid>
</Window>
